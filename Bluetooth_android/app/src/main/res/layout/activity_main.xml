<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.eren.bluetooth.MainActivity">

    <Button
        android:id="@+id/button8"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="144dp"
        android:text="HOUR"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="56dp"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/button9"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="257dp"
        android:text="MIN"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="56dp"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set Alarm"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="116dp"
        android:layout_marginRight="73dp"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/button5"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginLeft="57dp"
        android:layout_marginTop="257dp"
        android:text="MIN"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="8dp"
        android:text="On"
        android:textColor="@android:color/holo_green_dark"
        app:layout_constraintLeft_toRightOf="@+id/switch1"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintBottom_toBottomOf="@+id/switch1"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btn1"
        android:layout_width="271dp"
        android:layout_height="70dp"
        android:layout_marginTop="393dp"
        android:background="@android:color/holo_red_dark"
        android:elevation="5dp"
        android:text="Snooze"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        app:layout_constraintDimensionRatio=""
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/button9"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/button5" />

    <Switch
        android:id="@+id/switch1"
        android:layout_width="44dp"
        android:layout_height="29dp"
        android:textAlignment="viewStart"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        android:layout_marginTop="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="28dp"
        android:text="Alarm"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="@+id/switch1"
        app:layout_constraintRight_toRightOf="@+id/switch1"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Off"
        android:textColor="@android:color/holo_red_dark"
        app:layout_constraintTop_toTopOf="@+id/switch1"
        app:layout_constraintBottom_toBottomOf="@+id/switch1"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="1.0"
        app:layout_constraintRight_toLeftOf="@+id/switch1"
        android:layout_marginRight="10dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginLeft="57dp"
        android:layout_marginTop="144dp"
        android:text="HOUR"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="74dp"
        android:layout_marginTop="116dp"
        android:text="Set Time"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
